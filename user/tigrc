set main-view = \
    line-number:no \
    id:yes \
    date:relative-compact \
    author:full \
    commit-title:graph=v2

set tree-view = \
    line-number:no \
    mode:yes \
    file-name:yes \
    file-size:display=units \
    date:relative-compact \
    id:yes \
    author:full

set blame-view = \
    file-name:no \
    id:yes \
    date:relative-compact \
    author:full \
    line-number:yes,interval=1 \
